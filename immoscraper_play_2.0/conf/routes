
# exposes (in URL-Leiste aufgerufen) , controllers (package) , HomeController (file) , index (action)
GET     /                               controllers.HomeController.index

# Searching a cityName  - in future an object of params 
GET     /searchParamsGet                controllers.ExposeController.searchParamsGet(cityName: String)



GET       /expose                             controllers.ExposeController.show()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


